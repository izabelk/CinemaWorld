@model IEnumerable<CinemaWorld.Web.ViewModels.HomePageMovieViewModel>
@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var movie = Model.ElementAt(i);

        <div class="col-md-4">
            <h2>
                <a href="@Url.Action("Details", "Movies", new { movie.Id })">@movie.Title</a>
            </h2>
            <img src="@movie.ImageUrl" />
        </div>

        if (i > 0 && (i + 1) % 3 == 0)
        {
            @:</div>
            @:<div class="row-fluid">
        }
    }
</div>
<div class="row"></div>