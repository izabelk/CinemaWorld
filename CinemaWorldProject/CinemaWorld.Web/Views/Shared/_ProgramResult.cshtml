@model Dictionary<string, IGrouping<string, CinemaWorld.Web.ViewModels.Program.ProjectionViewModel>>
@if (Model.Count == 0)
{
    <h3 class="text-center">No results found!</h3>
}
else
{
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th class="text-center">Title</th>
                <th class="text-center">Duration</th>
                <th class="text-center">City</th>
                <th class="text-center">Cinema</th>
                <th class="text-center">Projection</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                
                for (int i = 0; i < item.Value.Count(); i++)
                {
                    <tr>
                        <td>@item.Value.ElementAt(i).Movie</td>
                        <td>@item.Value.ElementAt(i).Minutes</td>
                        <td>@item.Value.ElementAt(i).City</td>
                        <td>@item.Value.ElementAt(i).Cinema</td>
                        <td>@string.Format("{0:HH:mm:ss tt}", item.Value.ElementAt(i).ShownOn)</td>
                    </tr>
                }
            }
        </tbody>

    </table>
}