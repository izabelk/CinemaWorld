@model Dictionary<string, IGrouping<string, CinemaWorld.Web.ViewModels.Program.ProjectionViewModel>>
@if (Model.Count == 0)
{
    <h3 class="text-center">No projections on this date.</h3>
}
else
{
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Duration</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var count = 0;

                <tr>
                    <td>@item.Key</td>
                    <td>@item.Value.ElementAt(0).Minutes</td>
                    @for (int i = 0; i < 5; i++)
                    {
                        if (count < item.Value.Count())
                        {
                            item.Value.OrderBy(p => p.ShownOn);
                            <td>@string.Format("{0:HH:mm:ss tt}", item.Value.ElementAt(i).ShownOn)</td>
                            count++;
                        }
                        else
                        {
                            <td></td>
                        }
                    }
                </tr>
            }
        </tbody>
    </table>
}