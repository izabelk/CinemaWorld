@model IEnumerable<CinemaWorld.Web.ViewModels.NewsViewModel>
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@(Html.Kendo()
    .ListView<CinemaWorld.Web.ViewModels.NewsViewModel>()
    .Name("news")
    .TagName("div")
    .ClientTemplateId("news-template")
    .Pageable()
    .DataSource(data =>
    {
        data.Read("GetNews", "News");
        data.ServerOperation(true);
        data.PageSize(3);
    }))

<script id="news-template" type="text/x-kendo-template">
    <div class="container">
        <br />
        <div class="row">
            <div class="col-md-6">
                ${Content}
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">${kendo.toString(CreatedOn, "g")}</div>
        </div>
    </div>
</script>